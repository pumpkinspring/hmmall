<!--pages/register/register.wxml-->
<view class="wapper">
<form catchsubmit="formSubmit">
<view class="formItem">
<text>用户名：</text>
<input type="text" name="username" placeholder="请输入用户名"></input>
</view>
<view class="formItem">
<text>手机号：</text>
<input type="number" name="phone" placeholder="请输入手机号"></input>
</view>
<view class="formItem">
<text>密 码：</text>
<input type="password" name="password" placeholder="请输入密码"></input>
</view>
<view style="color:blue;font-size:26rpx" bindtap="toLogin">已有账号，直接登录</view>
<button formType="submit" style="width:80%" class="btn" bindtap="formSubmit">注册账号</button>
</form>
</view>
