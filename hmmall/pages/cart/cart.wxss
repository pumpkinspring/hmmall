/* pages/cart/cart.wxss */
/* 加入购物车底部导航 start */
.cityAll{
  display: flex;
  width: 100%;
  height: 140rpx;
  justify-content: center;
  align-items: center;
  background-color: #ffffff;
}
.addCity{
  width: 400rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  border: 1px solid #f40;
  color: #f40;
  border-radius: 10rpx;
}

.add-cart-box {
  width: 100%;
  height: 50px;
  padding: 5px 0;
  background-color: #ffffff;
  position: fixed;
  bottom: 0px;
  display: flex;
  
}
.user{
  margin-top: 10px;
  padding: 0 20px;
  font-size: 15px;
  background-color: #fff;
}
.userComment{
  display: flex;
  justify-content: space-between;
}
.cart-box {
  width: 320rpx;
  padding: 0 10rpx;
  display: flex;
  text-align: center;
  line-height: 40px;
}
.cart-box-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.cart-box-item-img {
  width: 18px;
  height: 18px;
}
.cart-box-item-text {
  font-size: 12px;
  color: #999999;
}
.add-box {
  display: flex;
  flex: 1;
  justify-content: space-around;
  padding-right: 10px;
}
.add-box-item {
  flex: 1;
  text-align: center;
  line-height: 40px;
  color: #ffffff;
  font-size: 14px;
}
.add-box-item:first-child{
  background-color: #ff0000;
  border-radius: 20px 0 0 20px;
}
.add-box-item:last-child{
  background-color: #ffa200;
  border-radius: 0 20px 20px 0;
}
/* 加入购物车底部导航 end */
.price{
  font-size: 16px;
  color: #C00000;
}